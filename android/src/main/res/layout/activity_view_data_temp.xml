                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:paddingTop="@dimen/_2dp"
                            android:paddingBottom="@dimen/_2dp"
                            android:text="FRONT SIDE:"
                            android:textAllCaps="true"
                            android:textColor="@color/tab_color"
                            android:textSize="16sp"


                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_frontside"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    android:background="@color/white"
                    android:elevation="@dimen/_2dp"
                    app:cardCornerRadius="@dimen/_5dp"
                    app:cardElevation="@dimen/_5dp"

                    >

                    <LinearLayout
                        android:id="@+id/ly_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="BACK SIDE:"
                            android:textAllCaps="true"
                            android:textColor="@color/tab_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_backside"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ry_cardresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.accurascan.accuraemirates.custom.CustomTextView
                    android:id="@+id/tvSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_border_rect"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen"
                    android:visibility="visible"
                    app:typeface="ALLER_STD_DISPLAY" />

                <com.accurascan.accuraemirates.custom.CustomTextView
                    android:id="@+id/tvFM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_border_rect"
                    android:gravity="center"
                    android:text="FaceMatch"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen"
                    android:visibility="visible"
                    app:typeface="ALLER_STD_DISPLAY" />

                <com.accurascan.accuraemirates.custom.CustomTextView
                    android:id="@+id/tvRetry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_border_rect"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen"
                    android:visibility="gone"
                    app:typeface="ALLER_STD_DISPLAY" />

                <com.accurascan.accuraemirates.custom.CustomTextView
                    android:id="@+id/tvCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_border_rect"
                    android:gravity="center"
                    android:text="@android:string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen"
                    android:visibility="visible"
                    app:typeface="ALLER_STD_DISPLAY" />

            </LinearLayout>

            <com.accurascan.accuraemirates.custom.CustomTextView
                android:id="@+id/tvCancel1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_weight="1"
                android:background="@drawable/round_border_rect"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen"
                app:typeface="ALLER_STD_DISPLAY" />

            <com.accurascan.accuraemirates.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/blackShade" android:textSize="11dp"
                android:visibility="gone"
                app:typeface="ALLER_STD_REG" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>